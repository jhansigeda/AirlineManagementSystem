@model List<AirlineManagementSystem.Models.Booking>

<h2>My Bookings</h2>
<table class="table">
    <thead>
        <tr>
            <th>Flight</th>
            <th>Name</th>
            <th>Booked On</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.FlightNumber</td>
                <td>@booking.PassengerName</td>
                <td>@booking.BookingDate.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>
