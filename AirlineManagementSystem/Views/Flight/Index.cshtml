@model List<AirlineManagementSystem.Models.Flight>
@{
    ViewData["Title"] = "Flight List";
}

<h2>Available Flights</h2>

<table class="table">
    <thead>
        <tr>
            <th>Flight Number</th>
            <th>From</th>
            <th>To</th>
            <th>Time</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var flight in Model)
        {
            <tr>
                <td>@flight.FlightNumber</td>
                <td>@flight.Source</td>
                <td>@flight.Destination</td>
                <td>@flight.StartTime.ToString("g")</td>
                <td>
                    <form method="post" asp-controller="Booking" asp-action="Book">
                        <input type="hidden" name="FlightId" value="@flight.Id" />
                        <input type="hidden" name="FlightNumber" value="@flight.FlightNumber" />
                        <input type="text" name="PassengerName" placeholder="Your Name" required />
                        <button type="submit">Book Now</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>